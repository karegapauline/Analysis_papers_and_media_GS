	journal = {Science of The Total Environment},
	author = {Tran, Huan Minh and Tsai, Feng-Jen and Lee, Yueh-Lun and Chang, Jer-Hwa and Chang, Li-Te and Chang, Ta-Yuan and Chung, Kian Fan and Kuo, Han-Pin and Lee, Kang-Yun and Chuang, Kai-Jen and Chuang, Hsiao-Chi},

	journal = {Social Sciences \& Humanities Open},
	author = {Najar, Ali Vafaee and Pardasi, Esmat and Salehi, Mehrdad and Shargh, Bahare Boshrouei and Hooshmand, Elaheh},
	month = jan,
	year = {2025},
	keywords = {Healthcare services, Non-governmental organizations, Social capital, Social participation},

	journal = {Health \& Place},
	author = {Saligari, Serena and Nabukwangwa, Willah and Mwitari, James and Anderson de Cuevas, Rachel and Clayton, Stephen and Nyongesa, Margaret and Puzzolo, Elisa and Pope, Daniel and Nix, Emily},

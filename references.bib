	journal = {Science of The Total Environment},
	author = {Kalisa, Wilson and Zhang, Jiahua and Igbawua, Tertsea and Henchiri, Malak and Mulinga, Narcisse and Nibagwire, Deborah and Umuhoza, Mycline},
	month = aug,
	year = {2023},
	keywords = {Air pollution, Climate variables, East Africa, Geodetector, Spatial heterogeneity},

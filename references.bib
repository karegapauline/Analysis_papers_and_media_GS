	urldate = {2024-07-08},
	journal = {Environmental Health Perspectives},
	author = {Meade, Robert D. and Akerman, Ashley P. and Notley, Sean R. and Kirby, Nathalie V. and Sigal, Ronald J. and Kenny, Glen P.},
	month = feb,
	year = {2024},
	pmid = {38329752},
	pmcid = {PMC10852046},
	pages = {027003},
}

